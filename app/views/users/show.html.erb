<% provide(:title, @user.uid) %>
<%# if @user %>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>

  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.uid %>
        </h1>
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <% if user_signed_in? %>
        <%= render 'shared/post_form' %>
        <% end %>
      </section>
    </aside>
  </div>
<%# end %>
